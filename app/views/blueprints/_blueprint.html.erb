<%= link_to blueprint_path(blueprint) do %>
  <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
    <div class="card text-dark card-has-bg click-col" style="background-image:url('https://i.ytimg.com/vi/<%= blueprint.sample_videos.first %>/hqdefault.jpg');">
      <div class="content">
        <img class="card-img d-none" src='https://i.ytimg.com/vi/<%= blueprint.sample_videos.first %>/hqdefault.jpg' alt="Creative Manner Design Lorem Ipsum Sit Amet Consectetur dipisi?">
        <div class="card-img-overlay d-flex flex-column">
          <div class="card-body">
            <small class="card-meta mb-2">category</small>
            <h4 class="card-title mt-0 "><p class="text-dark"><%= blueprint.name %></p></h4>
            <small><i class="far fa-clock"></i><%= blueprint.created_at %></small>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
