<div class="navbar navbar-expand-sm navbar-lewagon">
  <div class="container-fluid">
    <%= link_to blueprints_path, class: "navbar-brand" do %>
      <%= image_tag "storylab_no_copy.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if current_user&.avatar&.attached? %>
            <%= cl_image_tag current_user.avatar.key, width: 40, height: 40, :gravity=>"face", :crop=>"thumb", class: "avatar", alt: "dropdown menu" %>
          <% else %>
              <%= image_tag "https://t4.ftcdn.net/jpg/00/23/72/59/240_F_23725944_W2aSrg3Kqw3lOmU4IAn7iXV88Rnnfch1.jpg", class: "avatar-generic" %>
          <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Scripts", scripts_path, class: "dropdown-item" %>
              <% if (script = current_user&.scripts&.last) %>
                <%= link_to "Last Used Blueprint", blueprint_path(script.blueprint_id), class: "dropdown-item" %>
              <% end %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
