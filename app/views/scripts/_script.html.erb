<div class="container scripts-container">
  <div class="card">
    <div class="script-date">
      <h5 class="card-header"><%= script.updated_at.strftime("%Y-%m-%d") %></h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div>
          <% editing_video_url = "https://player.vimeo.com/external/297888097.sd.mp4?s=03dd8f3554e65f220699d2cdf55a3b1020d66b28&amp;profile_id=165&amp;oauth2_token_id=57447761" %>
          <% pexels_video = Pexels::Client.new.videos.search(script.topic, page: 1, per_page: 1, size: :medium, orientation: :landscape) %>
            <% if pexels_video.first.files.third.link.nil? %>
              <%= video_tag editing_video_url, size: "320x240", controls: false, autoplay: :autoplay, muted: :muted, loop: :loop %>
            <% else %>
              <% video_url = pexels_video.first.files.third.link %>
              <%= video_tag video_url, size: "320x240", controls: false, autoplay: :autoplay, muted: :muted, loop: :loop %>
            <% end %>
        </div>
        <div class="scripts-description">
          <h5><strong><%= script.blueprint.name %></strong>  -  "<i><%= script.topic %></i>"</h5>
          <br>
            <h3 class="card-title"><strong>
            <%= script.script_body[/(Title:).(?:(?!<\/h4>|<br>).)*/] %>
            </strong></h3>
        </div>
        <div class ="btn-viewscript">
            <%= link_to "View full script", script_path(script), class: "btn-readscript btn" %>
        </div>
      </div>
    </div>
  </div>
</div>
